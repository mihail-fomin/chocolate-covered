generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  price       Float
  weight      Float
  description String?
  category    String
  imageUrl    String
  // comments    Comment[]
}

